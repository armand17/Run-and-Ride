    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  tools:context="com.armand17.runandride.SaveSession">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:background="@color/primaryColorLight"
                android:id="@+id/namaSesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_margin="1dp"
                android:paddingBottom="1dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jarak"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:background="#9dbace"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/saveJarak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="jarak in M/KM"
                            android:background="@color/primaryColorLight"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Waktu"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:background="#9dbace"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/saveTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Waktu"
                            android:background="@color/primaryColorLight"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kecepatan"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:background="#9dbace"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/saveSpeed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="null"
                            android:background="@color/primaryColorLight"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detak Jantung"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:background="#9dbace"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/saveHeart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="null"
                            android:background="@color/primaryColorLight"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kalori"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:background="#9dbace"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/saveCalories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100 kKal"
                            android:background="@color/primaryColorLight"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="5dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/arrayPoint"
                            android:background="@color/primaryColorLight"/>

                    </LinearLayout>

                </ScrollView>

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    tools:context="com.armand17.runandride.SaveSession"
                    tools:layout="@layout/abc_action_bar_title_item"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primaryColorLight">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/saveJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Sesi"/>

                <EditText
                    android:id="@+id/saveKet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="keterangan"/>
                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Simpan"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/primaryTextColor"
                    android:gravity="center"
                    android:layout_margin="0dp"/>

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Batal"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/primaryTextColor"
                    android:gravity="center"
                    android:layout_margin="0dp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>